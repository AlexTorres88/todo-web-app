
<% if current_user %>
    <div class="container-fluid">
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active bold"><a href="#todo" aria-controls="todo" class="blue" role="tab" data-toggle="tab">To do</a></li>
            <li role="presentation" class="bold"><a href="#completed" class="blue" aria-controls="completed" role="tab" data-toggle="tab">Completed</a></li>
        </ul>

        <div class="tab-content">
            <div role="tabpanel" class="tab-pane fade in active" id="todo">
                <%= render 'shared/task_form' %>
                <%= render 'shared/feed' %>
            </div>
            <div role="tabpanel" class="tab-pane fade" id="completed">

            </div>
        </div>
    </div>
<% else %>
    <div class="center home-card">
        <h1 class="lg home-title blue"> Welcome to my first solo project </h1>
        <p class="md home-paragraph"> This to do app is meant to save the world from its most complex problems </p>
        <%= link_to "Register", '/signup', class: "bttn-lg background-blue white" %>
    </div>  
<% end %>



